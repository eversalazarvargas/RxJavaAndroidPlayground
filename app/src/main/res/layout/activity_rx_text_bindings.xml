<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/txtEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv"
        app:layout_constraintTop_toBottomOf="@+id/txtEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/labelSources"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        android:text="sources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtEditSource1"
        app:layout_constraintTop_toBottomOf="@+id/labelSources"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtEditSource2"
        app:layout_constraintTop_toBottomOf="@+id/txtEditSource1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvLabelOutput"
        android:text="output combine latest"
        app:layout_constraintTop_toBottomOf="@+id/txtEditSource2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOutputCombineLatest"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelOutput"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/outputTimer1"
        app:layout_constraintTop_toBottomOf="@+id/tvOutputCombineLatest"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="click here to see timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/outputTimer2"
        app:layout_constraintTop_toBottomOf="@+id/outputTimer1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="click here to see timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnReset"
        app:layout_constraintTop_toBottomOf="@id/outputTimer2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>